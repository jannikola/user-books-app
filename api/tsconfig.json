{
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": true,
		"esModuleInterop": true,
		"target": "es6",
		"lib": ["es6", "dom"],
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"],
	"lib": ["es2015"]
}
